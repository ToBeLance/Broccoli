<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".collectionFragment.CollectionFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/other_recipe_tv"
            android:padding="5dp"
            android:background="@drawable/search_box_background"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="他人的"/>
        <TextView
            android:id="@+id/mine_recipe_tv"
            android:padding="5dp"
            android:background="@drawable/search_box_background"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自己的"/>
        <TextView
            android:id="@+id/add_mine_recipe_tv"
            android:padding="5dp"
            android:background="@drawable/search_box_background"
            android:layout_marginTop="10dp"
            android:layout_marginStart="60dp"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加自创"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/other_recipe_rv"/>

    <include layout="@layout/detail_recipe"
        android:visibility="gone"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_recipe_fragment"/>




</LinearLayout>